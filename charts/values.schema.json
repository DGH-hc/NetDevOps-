{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": ["image", "environment"],

  "properties": {
    "environment": {
      "type": "string",
      "enum": ["dev", "staging", "production"]
    },

    "image": {
      "type": "object",
      "required": ["repository", "tag"],
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string",
          "minLength": 1
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        }
      }
    },

    "api": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "command": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "worker": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "command": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "celery",
            "-A",
            "app.worker.celery_app:celery_app",
            "worker",
            "--loglevel=info"
          ]
        }
      }
    },

    "migrations": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "command": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["alembic", "upgrade", "head"]
        }
      }
    },

    "resources": {
      "type": "object",
      "additionalProperties": true
    },

    "postgres": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "image": {
          "type": "string",
          "default": "postgres:16"
        },
        "port": {
          "type": "integer",
          "default": 5432
        },
        "storage": {
          "type": "object",
          "properties": {
            "size": {
              "type": "string",
              "default": "5Gi"
            }
          }
        }
      }
    },

    "secrets": {
      "type": "object",
      "properties": {
        "database": {
          "type": "object",
          "properties": {
            "user": { "type": "string" },
            "password": { "type": "string" },
            "name": { "type": "string" }
          }
        },
        "app": {
          "type": "object",
          "properties": {
            "secretKey": { "type": "string" }
          }
        }
      }
    },

    "pdb": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minAvailable": {
          "type": "integer",
          "minimum": 1
        }
      }
    },

    "hpa": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },

    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "className": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "path": {
          "type": "string",
          "default": "/"
        }
      }
    }
  }
}
